<h2><%= I18n.t('headings.password_editing') %></h2>

<div class='row'>
  <div class='col-md-6 mt-2'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class='mb-3'>
        <%= f.label :password, class: 'mb-1' %> <i>(<%= I18n.t('leave_blank') %>)</i><br />
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
        <% if @minimum_password_length %>
          <em><%= I18n.t('characters_minimum', length: @minimum_password_length) %></em>
        <% end %>
      </div>

      <div class='mb-3'>
        <%= f.label :password_confirmation, class: 'mb-1' %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>

      <div class='mb-3'>
        <%= f.label :current_password, class: 'mb-1' %> <i>(<%= I18n.t('need_current_password') %>)</i><br />
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
      </div>

       <div class='actions mb-3'>
        <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
        <%= link_to t('buttons.back'), :back, class: 'btn btn-outline-secondary' %>
      </div>
    <% end %>

    <p><%= button_to t('buttons.delete_account'), registration_path(resource_name),
      data: { confirm: t('are_you_sure') }, method: :delete, class: 'btn btn-danger mt-1'%></p>
  </div>
</div>
