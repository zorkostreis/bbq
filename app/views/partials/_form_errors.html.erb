<% errors = model.errors %>

<% if errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h5><%= I18n.t('error_messages.not_saved',
      errors: (I18n.t :error, count: errors.count)) %></h5>

    <ul>
      <% errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
