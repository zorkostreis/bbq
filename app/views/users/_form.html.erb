<%= form_with(model: user, html: {multipart: true}) do |form| %>
  <%= render partial: 'partials/form_errors', locals: {model: user} %>

  <div class='mb-3'>
    <%= form.label :name, class: 'mb-1' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :email, class: 'mb-1' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :avatar, class: 'mb-1' %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= form.file_field :avatar %>
  </div>

  <div class='actions mb-3'>
    <%= form.submit t('buttons.save'), class: 'btn btn-primary' %>
    <%= link_to t('buttons.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
