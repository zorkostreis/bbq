<h1><%= I18n.t('headings.pincode_needed') %></h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class='mb-3'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  
    <%= label_tag :pincode, t('pincode'), class: 'mb-1' %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>
  
  <div class='mb-3'>
    <%= submit_tag t('buttons.save'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to t('buttons.to_root'), root_path %>
