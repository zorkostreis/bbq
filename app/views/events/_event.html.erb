<div class='col-sm-6 col-md-4'>
  <div class='card thumbnail'>

    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>

    <div class='thumbnail-inner event-info-inner'>
      <div class='card-body'>
        <div class='event-description'>
        <div class='card-title'>
          <h3><%= link_to event.title, event_path(event) %></h3>
        </div>
        <div class='card-text'>
          <h3><small><%= l event.datetime, format: :short %></small></h3>
        </div>
          <div class='mt-2'><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
</div>
